GridLayout:
    cols: 4
    spacing: 2

    TextInput:
        id: result
        font_size: 32
        readonly: True
        halign: 'right'
        multiline: False

    Button:
        text: '1'
        on_press: app.on_button_press(self)
    Button:
        text: '2'
        on_press: app.on_button_press(self)
    Button:
        text: '3'
        on_press: app.on_button_press(self)
    Button:
        text: '+'
        on_press: app.on_button_press(self)

    Button:
        text: '4'
        on_press: app.on_button_press(self)
    Button:
        text: '5'
        on_press: app.on_button_press(self)
    Button:
        text: '6'
        on_press: app.on_button_press(self)
    Button:
        text: '-'
        on_press: app.on_button_press(self)

    Button:
        text: '7'
        on_press: app.on_button_press(self)
    Button:
        text: '8'
        on_press: app.on_button_press(self)
    Button:
        text: '9'
        on_press: app.on_button_press(self)
    Button:
        text: '*'
        on_press: app.on_button_press(self)

    Button:
        text: 'C'
        on_press: app.on_clear_press(self)
    Button:
        text: '0'
        on_press: app.on_button_press(self)
    Button:
        text: 'Printer'
        on_press: app.on_button_press(self)
    Button:
        text: '/'
        on_press: app.on_button_press(self)

    Button:
        text: 'Clear'
        on_press: app.on_clear_press(self)
    Button:
        text: '='
        on_press: app.on_solution(self)
